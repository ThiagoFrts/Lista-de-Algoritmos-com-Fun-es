programa {
  funcao inicio() {

    inteiro a,b,c

    escreva("Digite 3 números para saber qual é o maior deles.\nDigite um número: ")
    leia(a)
    escreva("\nDigite outro número: ")
    leia(b)
    escreva("\nDigite outro número: ")
    leia(c)


    se(a>b e a>c)escreva("O número ",a," é o maior dos três.")
    se(b>a e b>c)escreva("O número ",b," é o maior dos três.")
    se(c>b e c>a)escreva("O número ",c," é o maior dos três.")


    
  }
}
